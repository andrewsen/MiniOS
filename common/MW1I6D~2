#include "stdlib.h"
#include "heap.h"
#include "assert.h"

extern heap_t *kheap; 
extern uint32_t placement_address;

uint32_t kmalloc(uint32_t sz)
{
  if(kheap != 0) {
  	return (uint32_t)alloc(sz, 1, kheap);
  }
  
  uint32_t tmp = placement_address;
  placement_address += sz;
  return tmp;
} 

uint32_t kmalloc_1(uint32_t sz, int align)
{
  if(kheap != 0) {
  	return (uint32_t)alloc(sz, 1, kheap);
  }
  
  if (align == 1 && (placement_address & 0xFFFFF000)) // Если адрес еще не выровнен по границе страниц
  {
    // Align it.
    placement_address &= 0xFFFFF000;
    placement_address += 0x1000;
  }
  uint32_t tmp = placement_address;
  placement_address += sz;
  return tmp;
} 

uint32_t kmalloc_2(uint32_t sz, int align, uint32_t *phys)
{
  if(kheap != 0) {
  	return (uint32_t)alloc(sz, 1, kheap);
  }
  
  if (align == 1 && (placement_address & 0xFFFFF000)) // Если адрес еще не выровнен по границе страниц
  {
    // Align it.
    placement_address &= 0xFFFFF000;
    placement_address += 0x1000;
  }
  if (phys)
  {
    *phys = placement_address;
  }
  uint32_t tmp = placement_address;
  placement_address += sz;
  return tmp;
} 

void kfree(void* p) {
  if(kheap != 0) {
  	free(p, kheap);
  	//return (uint32_t)alloc(sz, 1, kheap);
  }
  else {
  	//PANIC("\nkheap == 0!\nHALT!\n");
  }
}
